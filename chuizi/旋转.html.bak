 <script type="text/javascript">
		//.box1 ul li:hover .inword_bac{transform:rotate(0deg);position:absolute;top:0;transition:all 0.5s;transform-origin:-5px 50px;}
	$(window).scroll(function(){
		if($(this).scrollTop()>350){
			$(".box1 ul").stop(true).animate({marginTop:0},300)
		}else{
			$(".box1 ul").stop(true).animate({marginTop:55},300)	
		}
	})
	$(function(){
		
		$(".box").mouseout(function(){
			$(".items").css({transform:"rotate(180deg)",transition:"all .3s",transformOrigin:"-10px 210px"})
		})

		$(".box").mouseover(function(){
			$(".items").css({transform:"rotate(0deg)",transition:"all .3s",transformOrigin:"-10px 210px"})
		})

		$(".inword").mouseover(function(){
			$(this).children("div").css({
				transform:"rotate(0deg)",
				position:"absolute",
				top:"0",
				transition:"all 0.3s",
				transformOrigin:"-5px 48px"
			})
					
		})
		$(".inword").mouseout(function(){
